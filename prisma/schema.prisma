generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model GoldProduct {
  id                 String   @id @default(cuid())
  productId          String   @unique
  weight             Float
  purity             Float
  manufacturing_cost Float
  total_price        Float
  goldWeight         Float?
  createdAt          DateTime @default(now())
}

